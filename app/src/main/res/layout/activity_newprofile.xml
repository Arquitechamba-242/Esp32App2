<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_newprofile"
    tools:context=".activities.CreateProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayoutTopProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pushProfileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/profileNameField"
                android:gravity="center"
                android:background="@drawable/background_user">
            </TextView>
            <EditText
                android:autofillHints="name"
                android:id="@+id/editProfileName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditNameText"
                android:background="@drawable/background_user"
                android:textSize="15sp"
                android:inputType="text">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field1"
                android:gravity="center"
                android:background="@color/purple_400">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxAlcohol"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinAlcohol"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field2"
                android:gravity="center"
                android:background="@color/color4">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxAltitud"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinAltitud"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field3"
                android:gravity="center"
                android:background="@color/gris">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxCO2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinCO2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field4"
                android:gravity="center"
                android:background="@color/color1">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxHumedad"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinHumedad"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field5"
                android:gravity="center"
                android:background="@color/naranjoso_puro">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxPresion"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinPresion"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/field6"
                android:gravity="center"
                android:background="@color/red">
            </TextView>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMaxTemperatura"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMaxValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
            <EditText
                android:importantForAutofill="no"
                android:id="@+id/editMinTemperatura"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="@string/defaultEditMinValueText"
                android:textSize="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/warning_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutTopProfile"
        app:layout_constraintBottom_toTopOf="@id/pushProfileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/red">

    </TextView>
    <Button
        android:id="@+id/pushProfileButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutTopProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_user"
        android:text="@string/pushProfileButton">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>