<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">
    <TextView
        android:id="@+id/statusText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/STATUS_OFF"
        android:gravity="center"
        android:visibility="gone"
        >
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:text="@string/field0"
                    android:gravity="center"
                    android:background="@drawable/back">
                </TextView>
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="default">
                </TextView>
                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:text="@string/profileButton"
                    android:padding="2dp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/field1"
                    android:gravity="center"
                    android:background="@drawable/back"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/field2"
                    android:gravity="center"
                    android:background="@drawable/back"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField2"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="@string/field3"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField3"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="@string/field4"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField4"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="@string/field5"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField5"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:text="@string/field6"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvField6"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="value"
                    android:background="@drawable/back"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>