<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".activities.MainActivity">
    <TextView
        android:id="@+id/statusText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/STATUS_OFF"
        android:gravity="center"
        android:visibility="visible"
        >
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:background="@color/verde_lima"
                    android:gravity="center"
                    android:text="@string/field0">

                </TextView>

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:background="@color/verde_oscuro"
                    android:gravity="center"
                    android:text="default">

                </TextView>

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@color/color3"
                    android:padding="2dp"
                    android:text="@string/profileButton">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_200"
                    android:gravity="center"
                    android:text="@string/field1">

                </TextView>

                <TextView
                    android:id="@+id/tvField1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_400"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField1Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_200"
                    android:gravity="center">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/color2"
                    android:gravity="center"
                    android:text="@string/field2">

                </TextView>

                <TextView
                    android:id="@+id/tvField2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/color4"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField2Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/color2"
                    android:gravity="center">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/gris"
                    android:gravity="center"
                    android:text="@string/field3">

                </TextView>

                <TextView
                    android:id="@+id/tvField3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/gris_opaco"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField3Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/gris"
                    android:gravity="center">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/teal_200"
                    android:gravity="center"
                    android:text="@string/field4">

                </TextView>

                <TextView
                    android:id="@+id/tvField4"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/color1"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField4Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/teal_200"
                    android:gravity="center">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/naranjoso"
                    android:gravity="center"
                    android:text="@string/field5">

                </TextView>

                <TextView
                    android:id="@+id/tvField5"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/naranjoso_puro"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField5Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/naranjoso"
                    android:gravity="center">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="@string/field6">

                </TextView>

                <TextView
                    android:id="@+id/tvField6"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/red_puro"
                    android:gravity="center"
                    android:text="value">

                </TextView>

                <ImageView
                    android:id="@+id/tvField6Vec"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/red"
                    android:gravity="center">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
